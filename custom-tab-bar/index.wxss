.tab-bar {
  position: fixed;
  bottom: 0;
  height: 100rpx;
  background: white;
  display: flex;
  z-index: 10;
  width: 100vw;
}
.centerImg
{
  width: 70rpx !important;
  height: 70rpx !important;
}
.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.tabar_text
{
  color: #333;
  font-size: 26rpx;
}

.tab-bar-item cover-image {
  width: 64rpx;
  height: 64rpx;
}

.tab-bar-item cover-view {
  font-size: 10px;
}

